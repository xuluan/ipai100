
<%= button_to '新文章', new_message_path, :method => :get %>

<h1>文章列表</h1>
<div id="product_list">
<table>
<% @messages.each do |message| %>

  <tr  class="<%= cycle('list_line_odd', 'list_line_even') %>" >

    <td><%= image_tag(message.pic.url(:medium) , :class => 'list_image') if message.pic.present? %></td>

    <td class="list_description" >
    <p><%= message.context if message.context %></p>

    </td>

  </tr>
<% end %>
</table>
</div>
<br />

