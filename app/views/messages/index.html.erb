
<h2><%= link_to "Sync Message", sync_index_path  %></h2>

<h1>Listing messages</h1>

<table>
  <tr>
    <th>Photo</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= image_tag message.pic.url(:medium) if message.pic.present? %></td>

    <td><%= message.context if message.context %></td>

    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

